    <div class="container py-4">
        <h3 class="text-center pb-2">Registro</h3>
        <hr>

        <div class="row justify-content-center pb-3">
            <div class="col-md-6">
                <h3>Nuevo usuario</h3>
                <form action="/api/session/register" class="my-4" id="formRegistro" method="POST">
                    <input class="form-control mb-3" type="text" id="first_name" name="first_name" placeholder="Ingresa tu Nombre/s" required>
                    <input class="form-control mb-3" type="text" id="last_name" name="last_name" placeholder="Ingresa tu apellido" required>
